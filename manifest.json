{
  "manifest_version": 3,
  "name": "Nori",
  "description": "Notes that flow with you â€” a minimalist Chrome overlay for thought capture.",
  "version": "1.0",
  "permissions": ["storage", "activeTab", "scripting", "commands"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle_nori": {
      "suggested_key": {
        "default": "Alt+W",
        "mac": "Option+W"
      },
      "description": "Toggle Nori overlay"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
